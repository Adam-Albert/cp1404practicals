BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: input_miles
            font_size: 30
        BoxLayout:
            orientation: "vertical"
            size_hint_x: .21
            Button:
                text: "up"
                on_press: app.handle_increment(+1)
            Button:
                text: "down"
                on_press: app.handle_increment(-1)
    Button:
        text: "Convert Miles to Kilometers"
        on_press: app.convert_miles_to_kilometers()

    Label:
        id: output_label
        color: (1, 1, 0, 1)